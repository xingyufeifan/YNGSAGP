<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp">

            <TextView
                style="@style/myLeftText"
                android:text="预报险情等级：" />

            <TextView
                android:id="@+id/foreLevel"
                style="@style/disasterStyle" />
        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/level" />

            <TextView
                android:id="@+id/level"
                style="@style/disasterStyle"
                android:hint="暂未处理" />
        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/dReportPersonnel" />

            <TextView
                android:id="@+id/userDangerShow"
                style="@style/disasterStyle" />
        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/dReportPhone" />

            <TextView
                android:id="@+id/phoneDangerShow"
                style="@style/disasterStyle" />
        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/dReportTime" />

            <TextView
                android:id="@+id/timeDangerShow"
                style="@style/disasterStyle" />
        </LinearLayout>

        <TextView
            style="@style/myDivide"
            android:layout_marginBottom="10dp" />

        <TextView
            style="@style/myTextTitle"
            android:text="地点" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/dReportAddress" />

            <TextView
                android:id="@+id/addressDangerShow"
                style="@style/disasterStyle"
                android:hint="请输入...(必填)" />
        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/dReportLocation" />

            <TextView
                android:id="@+id/locationDangerShow"
                style="@style/disasterStyle"
                android:hint="请输入...(必填)" />
        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/dReportLon" />

            <TextView
                android:id="@+id/lonDangerShow"
                style="@style/disasterStyle" />
        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/dReportLat" />

            <TextView
                android:id="@+id/latDangerShow"
                style="@style/disasterStyle" />
        </LinearLayout>

        <TextView
            style="@style/myDivide"
            android:layout_marginBottom="10dp"/>

        <TextView
            style="@style/myTextTitle"
            android:text="原因/类型" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/xqNum" />

            <TextView
                android:id="@+id/xqNumShow"
                style="@style/disasterStyle"
                android:hint="请输入...(必填)" />
        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/dReportType" />

            <Spinner
                android:id="@+id/typeDangerShow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:entries="@array/dangerType" />

        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/dReportFactor" />

            <TextView
                android:id="@+id/factorDangerShow"
                style="@style/disasterStyle"
                android:hint="请输入...(必填)" />
        </LinearLayout>

        <TextView
            style="@style/myDivide"
            android:layout_marginBottom="10dp"/>

        <TextView
            style="@style/myTextTitle"
            android:text="险情" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/personDanger" />

            <TextView
                android:id="@+id/personDangerShow"
                style="@style/disasterStyle"
                android:inputType="number" />
        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/houseDanger" />

            <TextView
                android:id="@+id/houseDangerShow"
                style="@style/disasterStyle"
                android:inputType="number" />
        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/moneyDanger" />

            <TextView
                android:id="@+id/moneyDangerShow"
                style="@style/disasterStyle"
                android:hint="请输入...(必填)"
                android:inputType="number" />
        </LinearLayout>

        <TextView style="@style/myDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/myLeftText"
                android:text="@string/areaDanger" />

            <TextView
                android:id="@+id/areaDangerShow"
                style="@style/disasterStyle"
                android:inputType="number" />
        </LinearLayout>

        <TextView
            style="@style/myDivide"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/ll_dReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/myTextTitle"
                android:text="电话通知填报" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    style="@style/myLeftText"
                    android:text="@string/dReportMobile" />

                <TextView
                    android:id="@+id/dReportMobileShow"
                    style="@style/disasterStyle" />
            </LinearLayout>

            <TextView style="@style/myDivide" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    style="@style/myLeftText"
                    android:text="@string/dReportName" />

                <TextView
                    android:id="@+id/dReportNameShow"
                    style="@style/disasterStyle" />
            </LinearLayout>

            <TextView style="@style/myDivide" />
        </LinearLayout>

        <TextView
            style="@style/myTextTitle"
            android:text="@string/dReportOther" />

        <TextView
            android:id="@+id/otherDangerShow"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_report"
            android:hint="@string/pleaseInput"
            android:padding="5dp"
            android:textSize="16sp" />

        <TextView
            style="@style/myDivide" />

        <LinearLayout
            android:id="@+id/ll_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/myTextTitle"
                android:text="处置信息" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    style="@style/myLeftText"
                    android:text="处置人：" />

                <TextView
                    android:id="@+id/disposePerson"
                    style="@style/disasterStyle" />
            </LinearLayout>

            <TextView style="@style/myDivide" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    style="@style/myLeftText"
                    android:text="处置人电话：" />

                <TextView
                    android:id="@+id/disposeMobile"
                    style="@style/disasterStyle" />
            </LinearLayout>

            <TextView style="@style/myDivide" />

            <TextView
                style="@style/myLeftText"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/dReportHandle" />

            <TextView
                android:id="@+id/et_handle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_report"
                android:hint="@string/pleaseInput"
                android:padding="5dp"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>