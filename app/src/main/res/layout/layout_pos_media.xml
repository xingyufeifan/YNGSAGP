<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/myTextTitle"
                android:text="图片信息" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_photo_uploaded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp">

            </android.support.v7.widget.RecyclerView>

            <TextView
                style="@style/myTextTitle"
                android:text="视频信息"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_video_updated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp">

            </android.support.v7.widget.RecyclerView>

            <TextView
                style="@style/myTextTitle"
                android:text="音频信息"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_audio_updated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/ll_add_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/dividerColor"
                    android:layout_height="40dp">

                    <TextView
                        style="@style/myTextTitle"
                        android:layout_centerVertical="true"
                        android:text="新增图片" />

                    <ImageView
                        android:id="@+id/iv_take_photo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/add_image"
                        android:layout_marginEnd="10dp" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                </android.support.v7.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/lineColor"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/dividerColor"
                    android:layout_height="40dp">

                    <TextView
                        style="@style/myTextTitle"
                        android:layout_centerVertical="true"
                        android:text="新增视频" />

                    <ImageView
                        android:id="@+id/iv_take_video"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/add_video"
                        android:layout_marginEnd="10dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请添加视频文件"
                    android:padding="10dp"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/lineColor"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/dividerColor"
                    android:layout_height="40dp">

                    <TextView
                        style="@style/myTextTitle"
                        android:layout_centerVertical="true"
                        android:text="新增音频" />

                    <ImageView
                        android:id="@+id/iv_take_audio"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/add_audio"
                        android:layout_marginEnd="10dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请添加录音文件"
                    android:padding="10dp"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/lineColor"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>