<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/iv_take_photo"
            style="@style/myButtonBlue"
            android:layout_marginRight="10dp"
            android:text="拍照"/>

        <Button
            android:id="@+id/iv_take_video"
            style="@style/myButtonBlue"
            android:layout_marginRight="10dp"
            android:text="视频"/>

        <Button
            android:id="@+id/iv_take_audio"
            style="@style/myButtonBlue"
            android:layout_marginRight="10dp"
            android:text="录音"/>
        <Button
            android:id="@+id/iv_check_file"
            style="@style/myButtonBlue"
            android:visibility="gone"
            android:text="文件"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="图片"
                android:textColor="@color/header_left_text"
                android:textSize="20sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/tv_photo"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/holo_light_primary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="视频"
                android:textColor="@color/header_left_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_video"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/holo_light_primary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="录音"
                android:textColor="@color/header_left_text"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_audio"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/holo_light_primary"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_upload_file"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="文件"
                android:textColor="@color/header_left_text"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_file"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/holo_light_primary"/>
        </LinearLayout>
            </LinearLayout>
    </ScrollView>
</LinearLayout>