<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
        <!--&lt;!&ndash;状态栏颜色&ndash;&gt;-->
        <!--&lt;!&ndash;<item name="colorPrimaryDark">@color/Indigo_colorPrimaryDark</item>&ndash;&gt;-->
        <!--&lt;!&ndash;&lt;!&ndash;Toolbar颜色&ndash;&gt;&ndash;&gt;-->
        <!--&lt;!&ndash;<item name="colorPrimary">@color/Indigo_colorPrimary</item>&ndash;&gt;-->
        <!--&lt;!&ndash;返回键样式&ndash;&gt;-->
        <!--<item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>-->
    <!--</style>-->
    <style name="AppTheme" parent="MyThemeStyle" />
    <style name="MyThemeStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/statusColor</item>
        <item name="colorPrimaryDark">@color/statusColor</item>
        <item name="colorAccent">@color/statusColor</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <style name="InputStyle"  parent="Theme.AppCompat.Light">
        <!-- 底部线 默认颜色 -->
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <!-- 底部线 EditText激活时颜色 -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!-- 设置光标 -->
        <item name="android:textCursorDrawable">@color/colorPrimaryDark</item>
    </style>

    <style name="disasterStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:hint">@string/pleaseInput</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>

    </style>
    <style name="Transparent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="myButtonBlue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:background">@drawable/report_btn_shape</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myButtonReport">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/report_btn_shape</item>
    </style>

    <style name="myButtonSave">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/save_btn_shape</item>
    </style>

    <style name="myLeftText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myDivide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.01dp</item>
        <item name="android:background">@color/lineColor</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="myTextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:background">@color/dividerColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/statusColor</item>
    </style>
    
</resources>
