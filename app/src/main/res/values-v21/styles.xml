<resources>

    <style name="AppTheme" parent="MyThemeStyle" />
    <style name="MyThemeStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/statusColor</item>
        <item name="colorPrimaryDark">@color/statusColor</item>
        <item name="colorAccent">@color/statusColor</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <style name="InputStyle"  parent="Theme.AppCompat.Light">
        <!-- 底部线 默认颜色 -->
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <!-- 底部线 EditText激活时颜色 -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!-- 设置光标 -->
        <item name="android:textCursorDrawable">@color/colorPrimaryDark</item>
    </style>

    <style name="disasterStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:hint">@string/pleaseInput</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>

    </style>
    <style name="Transparent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
